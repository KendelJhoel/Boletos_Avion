@model Boletos_Avion.Models.ChangeEmailViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="@Url.Content("~/css/ChangeEmail.css")" asp-append-version="true" />
}

<div class="container mt-5">
    <h2 class="text-center">Cambiar Correo Electrónico</h2>
    <hr />

    <!-- Mensaje de éxito -->
    @if (TempData["UpdateSuccess"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["UpdateSuccess"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <div class="text-center my-4">
        <span id="newEmailDisplay" class="fw-bold text-primary">______</span>
        <i class="fa fa-arrow-right mx-3"></i>
        <span class="fw-bold">@ViewContext.HttpContext.Session.GetString("UserEmail")</span>
    </div>

    <form asp-action="ChangeEmail" method="post">
        <div class="mb-3">
            <label for="newEmail" class="form-label">Ingresa el nuevo correo</label>
            <input type="email" class="form-control" name="NewEmail" id="newEmail" required />
            <small class="text-danger" id="emailError"></small> <!-- Mensaje de error -->
        </div>

        <div class="mb-3">
            <label for="verificationCode" class="form-label">Ingresa el código enviado a tu correo actual</label>
            <input type="text" class="form-control" name="VerificationCode" id="verificationCode" required />
            <small class="text-danger" id="codeError"></small>
        </div>

        <div class="text-center">
            <button type="submit" id="saveChangesBtn" class="btn btn-primary" disabled>Guardar Cambios</button>
            <a href="@Url.Action("EditProfile", "Account")" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>

</div>

@section Scripts {
    <script src="~/js/changeEmail-validation.js" asp-append-version="true"></script>
}