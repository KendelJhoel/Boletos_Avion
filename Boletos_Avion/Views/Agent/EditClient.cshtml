@model Boletos_Avion.Models.UserModel

@{
    ViewData["Title"] = "Editar Cliente";
}

<h2>Editar Cliente</h2>

<form asp-action="EditClient" method="post">
    <input type="hidden" asp-for="IdUsuario" />

    <div class="form-group">
        <label>Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Teléfono</label>
        <input type="text" asp-for="Telefono" class="form-control" />
    </div>

    <div class="form-group">
        <label>Dirección</label>
        <input type="text" asp-for="Direccion" class="form-control" />
    </div>

    <div class="form-group">
        <label>Documento de Identidad</label>
        <input type="text" asp-for="DocumentoIdentidad" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Client" class="btn btn-secondary">Cancelar</a>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <p class="text-danger">@ViewBag.ErrorMessage</p>
}
