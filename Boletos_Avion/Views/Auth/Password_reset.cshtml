@{
    ViewData["Title"] = "Restablecer Contraseña";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Password-reset.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <style>
        /* Imagen de fondo */
        body {
            background: url('@Url.Content("~/images/fondo.jpg")') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Contenedor del formulario */
        .card {
            backdrop-filter: blur(25px);
            background: rgba(255, 255, 255, 0.15);
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
            padding: 30px;
            width: 100%;
            max-width: 400px;
        }

        /* Título */
        h3 {
            font-weight: bold;
            color: #ffffff;
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
            text-align: center;
        }

        /* Botón principal */
        .btn-primary {
            background: linear-gradient(90deg, #007bff, #0056b3);
            border: none;
            transition: 0.3s;
            font-weight: bold;
            color: white;
        }

            .btn-primary:hover {
                background: linear-gradient(90deg, #0056b3, #003d82);
            }

        /* Botón secundario */
        .btn-secondary {
            background-color: rgba(255, 255, 255, 0.2);
            border: 1px solid white;
            transition: 0.3s;
            color: white;
            font-weight: bold;
        }

            .btn-secondary:hover {
                background-color: rgba(255, 255, 255, 0.4);
            }

        /* Campos de entrada */
        .form-control {
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.3);
            border: 1px solid white;
            color: #fff;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

        /* Ajustar etiquetas */
        label {
            color: white;
            font-weight: bold;
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
        }
    </style>

</head>
<body>
    <div class="container mt-5">
        <div class="card mx-auto" style="max-width: 500px">
            <div class="card-body">
                <h3 class="text-center">Recuperar Contraseña</h3>

                @if (ViewBag.ResetError != null)
                {
                    <div class="alert alert-danger">@ViewBag.ResetError</div>
                }

                <form method="post" asp-controller="Auth" asp-action="SendPasswordReset">
                    <div class="mb-3">
                        <label class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" name="correo" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Enviar Correo</button>
                    <br />
                    <div class="text-center mt-3">
                        <a href="/Auth/Authentication" class="btn btn-secondary w-100">Volver al Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal de éxito sin opción de cerrar -->
    @if (TempData["ResetSuccess"] != null)
    {
        <div class="modal fade show" id="resetSuccessModal" tabindex="-1" aria-labelledby="resetModalTitle" style="display:block; background:rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-md">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Correo Enviado</h5>
                    </div>
                    <div class="modal-body">
                        <p>@TempData["ResetSuccess"]</p>
                    </div>
                    <div class="modal-footer">
                        <a href="/Auth/Authentication" class="btn btn-success w-100">Aceptar</a>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
