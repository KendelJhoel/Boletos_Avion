@model List<Boletos_Avion.Models.VueloViewModel>

@{
    ViewData["Title"] = "Inicio - GESTION BOLETOS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Index.css" />
}

<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold">Encuentra tu próximo vuelo</h2>

    <!-- Formulario -->
    <form asp-action="BuscarVuelos" asp-controller="Vuelos" method="post" class="p-4 shadow rounded bg-light">
        <div class="row justify-content-center align-items-center text-center">
            <div class="col-md-3">
                <label for="origen" class="form-label fw-bold">Origen</label>
                <input type="text" class="form-control rounded-pill text-center" name="origen" id="origen" placeholder="Ej. SAL" />
            </div>
            <div class="col-md-3">
                <label for="destino" class="form-label fw-bold">Destino</label>
                <input type="text" class="form-control rounded-pill text-center" name="destino" id="destino" placeholder="Ej. MEX" />
            </div>
            <div class="col-md-3">
                <label for="fechaIda" class="form-label fw-bold">Fecha de Ida</label>
                <input type="date" class="form-control rounded-pill text-center" name="fechaIda" id="fechaIda" />
            </div>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMensaje))
        {
            <p class="text-danger fw-bold mt-3 text-center">@ViewBag.ErrorMensaje</p>
        }

        <div class="d-flex justify-content-center mt-4">
            <button class="btn btn-primary px-5 py-2 rounded-pill fw-bold shadow" type="submit">
                🔍 Buscar Vuelos
            </button>
        </div>
    </form>

    @if (Model != null && Model.Count > 0)
    {
        <div class="container mt-5">
            <h2 class="mb-4 text-center fw-bold">Resultados de la búsqueda</h2>
            <div class="table-responsive shadow-lg p-3 bg-white rounded">
                <table class="table table-hover text-center">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>Código Vuelo</th>
                            <th>Origen</th>
                            <th>Destino</th>
                            <th>Fecha de Salida</th>
                            <th>Fecha de Llegada</th>
                            <th>Precio</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vuelo in Model)
                        {
                            <tr>
                                <td><strong>@vuelo.CodigoVuelo</strong></td>
                                <td>@vuelo.CiudadOrigen (@vuelo.AeropuertoOrigen)</td>
                                <td>@vuelo.CiudadDestino (@vuelo.AeropuertoDestino)</td>
                                <td>@vuelo.FechaSalida.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@vuelo.FechaLlegada.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="fw-bold text-success">@vuelo.PrecioBase.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else if (Model != null && Model.Count == 0)
    {
        <p class="alert alert-warning text-center fw-bold mt-4">⚠️ No hay vuelos disponibles para los criterios ingresados.</p>
    }
</div>

<!-- Segundo Formulario de Búsqueda Avanzada -->
<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold">Buscar Vuelos</h2>

    <form method="get" class="mb-4 p-3 border rounded shadow-sm bg-light">
        <div class="row g-3">
            <div class="col-md-3">
                <label for="precioMin" class="form-label">Precio Mínimo</label>
                <input type="number" class="form-control" id="precioMin" name="precioMin" min="0">
            </div>
            <div class="col-md-3">
                <label for="precioMax" class="form-label">Precio Máximo</label>
                <input type="number" class="form-control" id="precioMax" name="precioMax" min="0">
            </div>
            <div class="col-md-3">
                <label for="aerolinea" class="form-label">Aerolínea</label>
                <select class="form-select" id="aerolinea" name="aerolinea">
                    <option value="">Todas</option>
                    @if (ViewBag.Aerolineas != null)
                    {
                        @foreach (var aerolinea in ViewBag.Aerolineas as List<string>)
                        {
                            <option value="@aerolinea">@aerolinea</option>
                        }
                    }
                    else
                    {
                        <option value="">No hay aerolíneas disponibles</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="duracion" class="form-label">Duración Máxima</label>
                <select class="form-select" id="duracion" name="duracion">
                    <option value="">Cualquiera</option>
                    <option value="2">Menos de 2 horas</option>
                    <option value="5">Menos de 5 horas</option>
                    <option value="10">Menos de 10 horas</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="categoria" class="form-label">Categoría de Asiento</label>
                <select class="form-select" id="categoria" name="categoria">
                    <option value="">Todas</option>
                    <option value="Economy">Economy</option>
                    <option value="Business">Business</option>
                    <option value="First Class">First Class</option>
                </select>
            </div>
        </div>
        <div class="d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-primary">Buscar</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Restablecer</a>
        </div>
    </form>
</div>

<!-- Carrusel de Categorías -->
<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold">Categorías</h2>

    <div id="carouselMultiItem" class="carousel slide carousel-multi-item mt-5" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row">
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", "CategoriaAdicional", new { filtro = "Asia" })">
                            <img src="~/images/carousel/asia.jpeg" class="img-fluid" alt="Asia" />
                        </a>
                        <div class="text-center mt-2">Vuelos a Asia</div>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", "CategoriaAdicional", new { filtro = "America" })">
                            <img src="~/images/carousel/america.jpg" class="img-fluid" alt="America" />
                        </a>
                        <div class="text-center mt-2">Vuelos a América</div>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", "CategoriaAdicional", new { filtro = "Europa" })">
                            <img src="~/images/carousel/europa.jpg" class="img-fluid" alt="Europa" />
                        </a>
                        <div class="text-center mt-2">Vuelos a Europa</div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="row">
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", "CategoriaAdicional", new { filtro = "Oceania" })">
                            <img src="~/images/carousel/oceania.jpg" class="img-fluid" alt="Oceania" />
                        </a>
                        <div class="text-center mt-2">Vuelos a Oceanía</div>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", "CategoriaAdicional", new { filtro = "Vuelos Economicos" })">
                            <img src="~/images/carousel/economico.jpeg" class="img-fluid" alt="Vuelos Económicos" />
                        </a>
                        <div class="text-center mt-2">Vuelos Económicos</div>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", "CategoriaAdicional", new { filtro = "Vuelos Cortos" })">
                            <img src="~/images/carousel/pocotiempo.jpg" class="img-fluid" alt="Vuelos Cortos" />
                        </a>
                        <div class="text-center mt-2">Vuelos Cortos</div>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselMultiItem" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselMultiItem" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>
</div>


