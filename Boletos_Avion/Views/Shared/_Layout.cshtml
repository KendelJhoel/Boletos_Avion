@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Boletos_Avion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Boletos_Avion.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    @if (!(ViewContext.HttpContext.Request.Path.Value.Contains("Auth/Authentication")
    || ViewContext.HttpContext.Request.Path.Value.Contains("Auth/Password_reset")))
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">GESTION BOLETOS</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Vuelos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Aerolíneas</a>
                            </li>
                            @if (ViewContext.HttpContext.Session.GetString("UserEmail") != null)
                            {
                                <li class="nav-item">
                                    <span class="nav-link">Bienvenido, @ViewContext.HttpContext.Session.GetString("UserName")</span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Profile">Tu Información</a>
                                </li>
                                @switch (ViewContext.HttpContext.Session.GetInt32("UserRole"))
                                {
                                    case 1:
                                        <li class="nav-item">
                                            <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Panel Admin</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">Gestión de Usuarios</a>
                                        </li>
                                        break;
                                    case 2:
                                        <li class="nav-item">
                                            <a class="nav-link" asp-controller="Agent" asp-action="Dashboard">Panel Agente</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">Gestión de Reservas</a>
                                        </li>
                                        break;
                                }
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Auth" asp-action="Logout">Cerrar Sesión</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Auth" asp-action="Authentication">Iniciar Sesión</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Boletos_Avion - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
