@model List<Boletos_Avion.Models.Vuelo>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Vuelos a América";
    int currentPage = ViewData["CurrentPage"] != null ? (int)ViewData["CurrentPage"] : 1;
    int totalPages = ViewData["TotalPages"] != null ? (int)ViewData["TotalPages"] : 1;
}

<!-- Estilos para la columna "Ciudad Destino" -->
<style>
    .destino-highlight {
        background-color: #f2dede; /* Fondo en tono rojo claro */
        font-weight: bold;
        color: #ff6666; /* Letra en rojo claro */
    }
</style>

<h1 class="mt-4 text-center">@ViewData["Title"]</h1>

@if (Model == null || Model.Count == 0)
{
    <p class="text-center">No se encontraron vuelos para esta categoría.</p>
}
else
{
    <div class="table-responsive mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Aeropuerto Origen</th>
                    <th>Ciudad Origen</th>
                    <th>Aeropuerto Destino</th>
                    <th>Ciudad Destino</th>
                    <th>Fecha Salida</th>
                    <th>Fecha Llegada</th>
                    <th>Precio Base</th>
                    <th>Asientos Disponibles</th>
                    <th>Detalle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vuelo in Model)
                {
                    <tr>
                        <td>@vuelo.NombreAeropuertoOrigen</td>
                        <td>@vuelo.CiudadOrigen</td>
                        <td>@vuelo.NombreAeropuertoDestino</td>
                        <td class="destino-highlight">@vuelo.CiudadDestino</td>
                        <td>@vuelo.FechaSalida.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@vuelo.FechaLlegada.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@vuelo.PrecioBase.ToString("C")</td>
                        <td>@vuelo.AsientosDisponibles</td>
                        <td>
                            <a asp-controller="Vuelos" asp-action="Detalle" asp-route-id="@vuelo.IdVuelo" class="btn btn-info btn-sm">
                                Ver Detalle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Controles de paginación solo con flechas -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("America", new { page = currentPage - 1, pageSize = ViewData["PageSize"] ?? 10 })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }

            @if (currentPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("America", new { page = currentPage + 1, pageSize = ViewData["PageSize"] ?? 10 })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
}
