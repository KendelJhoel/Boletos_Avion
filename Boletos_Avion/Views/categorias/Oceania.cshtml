@model List<Boletos_Avion.Models.Vuelo>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Vuelos a Oceanía";
}

<!-- Estilos para resaltar la columna "Ciudad Destino" -->
<style>
    .destino-highlight {
        background-color: #f2dede; /* Fondo rojo claro */
        font-weight: bold;
        color: #a94442; /* Texto en rojo oscuro */
    }
</style>

<h1 class="mt-4 text-center">@ViewData["Title"]</h1>

@if (Model == null || Model.Count == 0)
{
    <p class="text-center">No se encontraron vuelos para esta categoría.</p>
}
else
{
    <div class="table-responsive mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Aeropuerto Origen</th>
                    <th>Ciudad Origen</th>
                    <th>Aeropuerto Destino</th>
                    <th>Ciudad Destino</th>
                    <th>Fecha Salida</th>
                    <th>Fecha Llegada</th>
                    <th>Precio Base</th>
                    <th>Asientos Disponibles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vuelo in Model)
                {
                    <tr>
                        <td>@vuelo.NombreAeropuertoOrigen</td>
                        <td>@vuelo.CiudadOrigen</td>
                        <td>@vuelo.NombreAeropuertoDestino</td>
                        <td class="destino-highlight">@vuelo.CiudadDestino</td>
                        <td>@vuelo.FechaSalida.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@vuelo.FechaLlegada.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@vuelo.PrecioBase.ToString("C")</td>
                        <td>@vuelo.AsientosDisponibles</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
